<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="001-create-table" author="pavel">

        <sql>
            CREATE SCHEMA IF NOT EXISTS wallet;
        </sql>

        <createTable tableName="players-liquibase" schemaName="wallet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="account" type="BIGINT"/>
        </createTable>

        <createTable tableName="audit-liquibase" schemaName="wallet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="idPlayer" type="BIGINT"/>
            <column name="operation" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="history-credit-debit-liquibase" schemaName="wallet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="idPlayer" type="BIGINT"/>
            <column name="operation" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="transaction-liquibase" schemaName="wallet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="nameTransaction" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
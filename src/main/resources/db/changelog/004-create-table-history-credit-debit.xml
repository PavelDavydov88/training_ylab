<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="004-create-table-history-credit-debit" author="pavel">
        <createSequence sequenceName="SEQUENCE_HISTORY" incrementBy="1" cacheSize="1" maxValue="9223372036854775807" startValue="30" schemaName="wallet"/>
        <createTable tableName="history-credit-debit" schemaName="wallet">
            <column name="id" type="BIGINT" remarks="ID истории дебит/кредит" defaultValueComputed="nextval('wallet.SEQUENCE_HISTORY')">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="id_player" type="BIGINT" remarks="ID игрока"/>
            <column name="operation" type="VARCHAR(255)" remarks="описание операции дебит/кредит"/>
        </createTable>

    </changeSet>
</databaseChangeLog>